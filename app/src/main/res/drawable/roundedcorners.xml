<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="85dip" />
            <stroke android:width="1dip" android:color="@color/UlensSecondColor" />
            <gradient android:angle="-90" android:startColor="@color/UlensSecondColor" android:endColor="@color/UlensSecondColor"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/UlensSecondColor" />
            <solid android:color="#2aaa91"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="85dip" />
            <stroke android:width="1dip" android:color="@color/UlensSecondColor" />
            <gradient android:angle="-90" android:startColor="@color/UlensSecondColor" android:endColor="@color/UlensSecondColor" />
        </shape>
    </item>
</selector>